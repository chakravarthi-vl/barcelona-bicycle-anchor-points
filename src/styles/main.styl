@import "../../node_modules/leaflet/dist/leaflet.css"
@import "../../node_modules/leaflet-easybutton/src/easy-button.css"

body
    margin: 0
    padding: 0

html,
body,
#map
    height: 100%

button
    padding: 0

#loading
    height: 100%
    left: 0
    opacity: 0
    position: absolute
    top: 0
    transition: opacity 0.25s ease-in-out
    visibility: hidden
    width: 100%
    z-index: 9999

    &:before
        background-color: #000
        content: ""
        display: block
        height: 100%
        left: 0
        opacity: 0.5
        position: absolute
        top: 0
        width: 100%

    &.is-visible
        opacity: 1
        visibility: visible

.double-bounce-container
    height: 100px
    left: 50%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%)
    width: 100px

.double-bounce1,
.double-bounce2
    animation: bounce 2s infinite ease-in-out
    background-color: #fff
    border-radius: 50%
    height: 100%
    left: 0
    opacity: 0.6
    position: absolute
    top: 0
    width: 100%

.double-bounce2
    animation-delay: -1s

@keyframes bounce
    0%,
    100%
        transform: scale(0)

    50%
        transform: scale(1)

.icon
    background-position: center center
    background-repeat: no-repeat
    background-size: cover
    display: inline-block
    height: 20px
    left: 50%
    position: absolute
    top: 50%
    transform: translate(-50%, -50%)
    width: @height

.icon--my-location
    background-image: url("../assets/ic_my_location_black_24px.svg")

.icon--location
    background-image: url("../assets/ic_location_on_black_24px.svg")

.icon--back
    background-image: url("../assets/ic_arrow_back_black_24px.svg")

.leaflet-control-radius-select
    background-color: #fff
    color: #000
    font-size: 16px
    padding: 10px

.leaflet-control-radius-select__title
    margin-bottom: 10px

.leaflet-control-radius-select__select
    border: 1px solid
    font-size: 16px
    padding: 4px
    width: 100%
